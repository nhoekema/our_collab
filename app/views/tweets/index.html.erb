<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="jumbotron text-center" style="background-image: url(http://thedailynews.cc/wp-content/gallery/legacy-field/spt-0823-cs-Legacy-Visitors-side-Pano-1.jpg")>
    <h1>Alex & Nathan's Betting Newsroom</h1>
  </div>

<div class="container">
<table>
  <thead>
    <tr>
      <th>Message</th>
      <th>User</th>
      <th>Likes</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.message %></td>
        <td><%= tweet.user.username %></td>
        <td><%= tweet.likes.count %></td>
        <td><%= link_to 'Show Tweet', tweet, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit Tweet', edit_tweet_path(tweet), class: "btn btn-primary" %></td>
        <td><%= link_to 'Delete Tweet', tweet, class: "btn btn-warning", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
    <%= link_to 'New Tweet', new_tweet_path, class: "btn btn-primary" %>
    <%= link_to "User Betting Profiles", profiles_path, class: "btn btn-primary" %>
    <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-danger"%>


