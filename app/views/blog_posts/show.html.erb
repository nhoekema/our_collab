<p id="notice"><%= notice %></p>

<div class="container">
    <div class="panel panel-primary">
        <div class="panel-heading">
        <%= @blog_post.title %>
        </div>
        <div class="panel-body">
            <p>by <%= link_to @blog_post.user.username, user_session_path(id: @blog_post.user.id) %></p>
            <p><%= time_ago_in_words(@blog_post.created_at) %> ago</p>
            <p><%= @blog_post.blog_entry %></p>
        </div>
        <div class="panel-footer">
            <% if current_user.id == @blog_post.user.id %>
                <div>
                    <%= link_to "Edit", edit_blog_post_path(@blog_post), class: "btn btn-warning" %>
                    <%= link_to "All Blog Posts", blog_posts_path, class: "btn btn-primary" %>
                </div>
            <% else %>
                <div>
                    <%= link_to "All Blog Posts", blog_posts_path, class: "btn btn-primary" %>
                </div>
            <% end %>
        </div>
    </div>

    <div class="panel panel-success">
        <div class="panel-heading">
        Make a comment
        </div>
        <div class="panel-body">
            <%= render "comments/form" %>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            Comments
        </div>
        <div class="panel-body">
            <%= render "comments/comments" %>
        </div>
    </div>
</div>

















